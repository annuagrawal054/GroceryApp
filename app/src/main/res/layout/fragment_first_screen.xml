<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="#FCE4EC"
    tools:context="com.palle.annu.palletodogrocery.AddTOCartFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_items"
        android:hint="Enter Item"
        android:background="@drawable/backg"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:textStyle="italic"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/et_items_quantity"
            android:hint="Enter Quantity"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:textStyle="italic"
            android:background="@drawable/backg"
            android:textSize="20sp"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_default_holo_light"
            android:id="@+id/sp_quantity">
        </Spinner>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:id="@+id/b_Add_item"
        android:text="Add to Cart"/>

  <!--  <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:id="@+id/button2"
        android:text="Show my List"/>-->



</LinearLayout>
